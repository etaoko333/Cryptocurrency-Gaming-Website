pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node16'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                https://github.com/etaoko333/cryptocurrency-gaming-website.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                sh 'trivy fs . --format table -o fs.html'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh '''$SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectName=cryptocurrency-gaming-website \
                        -Dsonar.projectKey=cryptocurrency-gaming-website'''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                        sh 'docker build -t sholly333/cryptocurrency-gaming-website:latest .'
                        sh 'docker push sholly333/cryptocurrency-gaming-website:latest'
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh 'trivy image sholly333/cryptocurrency-gaming-website:latest > trivy.txt'
            }
        }

        stage('Deploy to Container') {
            steps {
                sh '''
                    docker stop cryptocurrency-gaming-website || true
                    docker rm cryptocurrency-gaming-website || true
                    docker run -d --name cryptocurrency-gaming-website -p 3000:80 sholly333/cryptocurrency-gaming-website:latest
                '''
            }
        }
    }
}
